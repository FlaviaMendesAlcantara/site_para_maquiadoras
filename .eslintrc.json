{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],  
    "rules": {
        "object-curly-spacing": ["error", "never"],
        "max-len": ["error", { "code": 120 }],
        "linebreak-style": ["error", "windows"]
    }
}